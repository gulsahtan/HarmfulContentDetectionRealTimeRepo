<Window x:Class="HarmfulContentDetectionRealTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HarmfulContentDetectionRealTime"
        mc:Ignorable="d"
        Title="HarmfulContentDetection" Height="640" Width="640">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image x:Name="DisplayImage" Grid.Row="0" />
        <Canvas x:Name="DisplayImageCanvas" Grid.Row="0" Width="{Binding Path=ActualWidth, ElementName=DisplayImage}" Height="{Binding Path=ActualHeight, ElementName=DisplayImage}" Margin="0,0,0,0"/>
    </Grid>
</Window>
